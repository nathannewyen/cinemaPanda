@model LoginUser

<div class="card">
    <div class="card-header">Login</div>
    <div class="card-body">
        <form action="/login" method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="text" asp-for="LoginEmail" class="form-control" />
                        <span asp-validation-for="LoginEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" asp-for="LoginPassword" class="form-control" />
                        <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <input type="submit" class="btn bg-primary text-light" value="Login ">
        </form>
    </div>
</div>